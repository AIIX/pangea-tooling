require 'aptly'
require 'digest'
require 'optparse'
require 'ostruct'
require 'uri'
require 'net/ssh/gateway'

require_relative '../lib/debian/changes'
require_relative '../lib/debian/dsc'

options = OpenStruct.new
options.host = 'localhost'
options.port = '9090'
options.repo = nil
options.gateway = nil

parser = OptionParser.new do |opts|
  opts.banner = "Usage: #{opts.program_name} [options] --repo yolo CHANGESFILE"

  opts.on('-h', '--host HOST', "host name (#{options.host})") do |v|
    options.host = v
  end

  opts.on('-p', '--port PORT', "port number (#{options.port})") do |v|
    options.port = v
  end

  opts.on('-r', '--repo REPO', 'target repo name') do |v|
    options.repo = v
  end

  opts.on('-g', '--gateway URI', 'open gateway to remote') do |v|
    options.gateway = URI(v)
  end
end
parser.parse!

raise parser.help if ARGV.empty? || options.repo.nil?

if options.gateway
  case options.gateway.scheme
  when 'ssh'
    gateway = Net::SSH::Gateway.new(options.gateway.host, options.gateway.user)
    port = gateway.open('localhost', options.port)
  else
    raise 'Gateway scheme not supported'
  end
end

port ||= options.port

Aptly.configure do |config|
  config.host = options.host
  config.port = port
end

raise 'Repository does not exist' unless Aptly::Repository.exist?(options.repo)
repo = Aptly::Repository.get(options.repo)

def files_to_upload(checksums)
  files = []
  checksums.each do |checksum|
    file = checksum.file_name
    raise "File not found #{file}" unless File.exist?(file)

    sum = Digest::SHA256.hexdigest(File.read(file))
    raise "File #{file} has incorrect checksum" unless sum == checksum.sum

    files << File.absolute_path(file)
  end
  files
end

def open_changes(file)
  changes = Debian::Changes.new(file)
  changes.parse!
  # Switch .changes to .dsc to make sure aptly will have everything it
  # expects, in particular the .orig.tar
  # https://github.com/smira/aptly/issues/370
  dsc = changes.fields['files'].find { |x| x.name.end_with?('.dsc') }
  return changes unless dsc
  puts "Switching #{File.basename(file)} to its .dsc version for upload ..."
  open_dsc(dsc.name)
end

def open_dsc(file)
  puts "Opening #{file}..."
  dsc = Debian::DSC.new(file)
  dsc.parse!
  dsc
end

ARGV.each do |file|
  next unless File.size?(file)
  Dir.chdir(File.dirname(file)) do
    dsc = open_changes(file)
    next unless dsc.fields

    files_to_upload = files_to_upload(dsc.fields['checksums-sha256'])
    raise 'Changes lists no files to upload!?' if files_to_upload.empty?

    puts 'Uploading files...'
    repo.upload(files_to_upload)
  end
end

repo.published_in.each(&:update!)
