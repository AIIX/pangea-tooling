#!/usr/bin/env ruby

require 'aptly'
require 'digest'
require 'optparse'
require 'ostruct'
require 'uri'
require 'net/ssh/gateway'

require_relative '../lib/debian/changes'

options = OpenStruct.new
options.host = 'localhost'
options.port = '9090'
options.repo = nil
options.gateway = nil

parser = OptionParser.new do |opts|
  opts.banner = "Usage: #{opts.program_name} [options] --repo yolo CHANGESFILE"

  opts.on('-h', '--host HOST', "host name (#{options.host})") do |v|
    options.host = v
  end

  opts.on('-p', '--port PORT', "port number (#{options.port})") do |v|
    options.port = v
  end

  opts.on('-r', '--repo REPO', 'target repo name') do |v|
    options.repo = v
  end

  opts.on('-g', '--gateway URI', 'open gateway to remote') do |v|
    options.gateway = URI(v)
  end
end
parser.parse!

fail parser.help if ARGV.empty? || options.repo.nil?

if options.gateway
  case options.gateway.scheme
  when 'ssh'
    gateway = Net::SSH::Gateway.new(options.gateway.host, options.gateway.user)
    gateway.open('localhost', options.port, options.port)
  else
    fail 'Gateway scheme not supported'
  end
end

Aptly.configure do |config|
  config.host = options.host
  config.port = options.port
end

fail 'Repository does not exist' unless Aptly::Repository.exist?(options.repo)
repo = Aptly::Repository.get(options.repo)

ARGV.each do |changes_file|
  changes = Debian::Changes.new(changes_file)
  changes.parse!

  files_to_upload = []

  if changes.fields['checksums-sha256']
    changes.fields['checksums-sha256'].each do |checksum|
      file = checksum.file_name
      fail "File not found #{file}" unless File.exist?(file)

      sum = Digest::SHA256.hexdigest(File.read(file))
      fail "File #{file} has incorrect checksum" unless sum == checksum.sum

      files_to_upload << File.absolute_path(file)
    end
  end

  fail 'Changes lists no files to upload!?' if files_to_upload.empty?

  repo.upload(files_to_upload)
end

repo.published_in.each(&:update!)
